{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:prod": {
      "dependsOn": ["^build:prod"],
      "outputs": ["dist/**"]
    },
    "build:test": {
      "dependsOn": ["^build:test"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "preview:prod": {
      "cache": false,
      "persistent": true
    },
    "api:generate": {
      "cache": false,
      "persistent": true
    }
  }
}
