{
  "name": "server",
  "version": "0.1.0",
  "scripts": {
    "preview": "node dist/src/index.js",
    "dev": "nodemon src/index.ts",
    "build": "rimraf dist && tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "api:generate": "openapi-typescript ./public/schema.yaml -o ./src/types/schema.d.ts"
  },
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jose": "^5.9.6",
    "nodemailer": "^6.9.16",
    "openapi-typescript": "^7.5.2",
    "pre-commit": "^1.2.2",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.6.2"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ]
}
